{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permissions for Minimal Kernel Dashboard",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "core:path:default",
    "core:event:default",
    "core:webview:allow-create-webview",
    "core:webview:allow-create-webview-window",
    "core:webview:allow-set-webview-position",
    "core:webview:allow-set-webview-size",
    "core:webview:allow-webview-close",
    "app-commands:allow-create-plugin-container",
    "app-commands:allow-remove-plugin-container",
    "app-commands:allow-list-containers",
    "app-commands:allow-create-plugin-from-template",
    "app-commands:allow-layout-management",
    "app-commands:allow-plugin-management",
    "app-commands:allow-plugin-communication",
    "app-commands:allow-ui-plugin-management",
