{
  "name": "Minimal Kernel Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspace",
  
  // 配置开发工具
  "features": {
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "stable",
      "profile": "default"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {}
  },
  
  // VS Code扩展
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "serayuzgur.crates",
        "tamasfe.even-better-toml",
        "vadimcn.vscode-lldb",
        "mutantdino.resourcemonitor",
        "gruntfuggly.todo-tree",
        "GitHub.vscode-pull-request-github",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "rust-analyzer.cargo.features": "all",
        "rust-analyzer.checkOnSave.command": "clippy",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "rust-lang.rust-analyzer",
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer"
        }
      }
    }
  },
  
  // 转发端口
  "forwardPorts": [8080, 9229],
  
  // 环境变量
  "remoteEnv": {
    "DATABASE_URL": "sqlite:/workspace/data/data.db",
    "RUST_LOG": "debug",
    "CARGO_HOME": "/workspace/.cargo",
    "RUSTUP_HOME": "/workspace/.rustup"
  },
  
  // 后创建命令
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  
  // 挂载
  "mounts": [
    "source=${localWorkspaceFolder}/.cargo,target=/workspace/.cargo,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/.rustup,target=/workspace/.rustup,type=bind,consistency=cached",
    "source=target-volume,target=/workspace/target,type=volume"
  ],
  
  // 运行参数
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  
  // 用户
  "remoteUser": "vscode"
}